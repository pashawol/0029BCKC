mixin pageHead(h1, back)
	+b.page-head.section
		.container 
			.row
				.col
					block
					h1!= h1
				if back 
					.col-lg-2.order-first
						+e.link-back(href="#" title="Назад")
							+icon('arrow-left')
mixin pageBody()
	main.container.container--main 
		.row.row--main
			.col-lg-4.order-lg-first.order-last
				+b.sidebar
					ul
						li
							a.active(href="#") Главные новости
						li
							a(href="#") Региональные новости
						li
							a(href="#") Наши герои
						li
							a(href="#") СМИ о нас
			.col-lg-8
				block