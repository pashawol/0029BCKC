mixin sPressCenter(data)
	// start sPressCenter
	+b.SECTION.sPressCenter.section#sPressCenter&attributes(attributes)
		.container
			h1 Пресс-центр
			.row
				.col-lg-4.col-12
					+e.menu
						ul
							li
								+e.menu-btn.active(href="#") Главные новости
							li
								+e.menu-btn(href="#") Региональные новости
							li
								+e.menu-btn(href="#") Наши герои
							li
								+e.menu-btn(href="#") СМИ о нас
				.col-lg-8.col-12
					.news-content
						mixin item(i)
							.day-news__item
								+pic(`news-${i}.png`,'',0).news-img
								.day-news__item-body
									.date 19.08.21
									.caption Главное управление сообщает о&nbsp;лесопожарной обстановке на территории Краснодарского края Президент Российской Федерации, главы зарубежных стран, государственные деятели, тест тест
									a.detailed(href="#") Подробнее
						h2 Главные новости
						.row
							.input-wrapper.col-lg-6.col-12
								p Даты
								+input('Выберите период').input-date-picker-js(autocomplete="off")
							.day-news.col-12
								.day-news__head
									p 21 сентября
									.day-news__head-line
										hr
								+item(1)
								+item(2)
							.day-news.col-12
								.day-news__head
									p 20 сентября
									.day-news__head-line
										hr
								+item(3)
							.day-news.col-12
								.day-news__head
									p 19 сентября
									.day-news__head-line
										hr
								+item(2)
								+item(1)
							a.show-more(href="#") Показать еще

