mixin sEventsSlide(data)
	.swiper-slide
		+e.card
			if data.tagBlue
				+e.tag--blue Регистрация открыта
			if data.tagRed
				+e.tag--blue Регистрация закрыта
			+e.c-img(href="#")
				img(loading="lazy" src=`img/@2x/sEventsSlide-${data.imgNum}.png` alt="")
			+e.txt-box
				+e.c-title(href="#")=data.title
				+e.c-date 19 августа, с 18:00 до 20:00
				+e.c-location Республика Удмуртия



