mixin mob-mnu(main)
	+b.menu-mobile--js.d-lg-none
		+b.toggle-menu-mobile--js
			span
		+e.inner
			+e.logo(href="/")
				img(loading="lazy" src="img/@2x/logo.png" alt="")
			+mnu()
			if main
				+b.login-bl.mb-4(href="#")
					+e.img
						img(loading="lazy" src="img/svg/user.svg" alt="")
					+e.txt Войти
				+b.reg-btn(href="#") Регистрация
			else
				+b.login-bl.mb-4(href="#")
					+e.img
						img(loading="lazy" src="img/svg/user.svg" alt="")
					+e.txt Анастасия В.
				+b.exit-btn(href="#")
					+icon('exit')
					p Выйти
	//  мобильное меню

mixin top-nav(main) 
	// start top-nav
	+b.top-nav.block-with-lazy&attributes(attributes)
		.container
			+e.main-row.row.align-items-center
				if main
					.col-lg-auto.col-xl-2.d-none.d-lg-block
						+e.logo(href="/")
							img(loading="lazy" src="img/@2x/logo.png" alt="")
				else
					.col-lg-auto.d-none.d-lg-block
						+e.logo(href="/")
							img(loading="lazy" src="img/@2x/logo.png" alt="")
				+e.col--content.col
					+e.sub-row.row.align-items-center
						.col.col-sm-auto.d-lg-none
							+e.logo(href="/")
								img(loading="lazy" src="img/@2x/logo.png" alt="")
						.col-auto.d-none.d-lg-block
							+mnu()
						if main
							.col-auto.ms-auto
								+b.login-bl(href="#")
									+e.img
										img(loading="lazy" src="img/svg/user.svg" alt="")
									+e.txt.d-none.d-sm-inline Войти
							.col-auto.d-none.d-sm-block
								+b.reg-btn(href="#") Регистрация
						else
							+e.col--profile.col-auto.ms-auto
								+b.login-bl(href="#")
									+e.img
										img(loading="lazy" src="img/svg/user.svg" alt="")
									+e.txt.d-none.d-sm-inline Анастасия В.
							.col-auto
								+b.exit-btn(href="#")
									+icon('exit')
						.col-auto.d-lg-none
							+b.toggle-menu-mobile--js
								span
					if main
						+e.title
							h1 Всероссийский студенческий корпус спасателей
	// end top-nav
	+b.top-nav--fixed
		.container
			+e.main-row.row.align-items-center 
				.col-lg-auto.d-none.d-lg-block
					+e.logo(href="/")
						img(loading="lazy" src="img/@2x/logo.png" alt="")
				+e.col--content.col
					+e.sub-row.row.align-items-center
						.col.col-sm-auto.d-lg-none
							+e.logo(href="/")
								img(loading="lazy" src="img/@2x/logo.png" alt="")
						.col-auto.d-none.d-lg-block
							+mnu()
						.col-auto.d-none.d-sm-block
							div.mt-1
								a.contact-link(href="tel:+7(495)369-05-73")
									+icon("call-fix")
									span.d-none.d-md-block +7(495) 369-05-73 
								
							a.contact-link(href="mailto:info@vsks.ru")
								+icon("mail-fix")
								span.d-none.d-md-block info@vsks.ru
						.col-auto
							+soc()
								+item-sos('vk')
								+item-sos('tg')
						.col-auto
							a(href="#")
								img(src="img/svg/glasses.svg", alt="") 

						if main
							.col-auto.ms-auto
								+b.login-bl(href="#")
									+e.img
										img(loading="lazy" src="img/svg/user.svg" alt="")
									+e.txt.d-none.d-sm-inline Войти
							.col-auto.d-none.d-sm-block
								+b.reg-btn(href="#") Регистрация
						else
							+e.col--profile.col-auto.ms-auto
								+b.login-bl(href="#")
									+e.img
										img(loading="lazy" src="img/svg/user.svg" alt="")
									+e.txt.d-none.d-sm-inline Анастасия В.
							.col-auto
								+b.exit-btn(href="#")
									+icon('exit')
						.col-auto.d-lg-none
							+b.toggle-menu-mobile--js
								span