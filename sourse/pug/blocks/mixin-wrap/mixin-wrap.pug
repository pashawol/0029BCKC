mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider

mixin arrow2()
	+b.sw-arrows
		+e.row.row.justify-content-center
			.col-auto
				.swiper-prev
					+icon('chevron-left')
			+e.fract.fract-js.col-auto 3 / 5
			.col-auto
				.swiper-next
					+icon('chevron-right')

