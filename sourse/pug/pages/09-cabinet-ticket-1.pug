			.cropper-face.cropper-move, .cropper-view-box, .cropper-crop-box {
					//- min-height: 40mm;
					//- min-width: 30mm;
					min-width: 120px;
					min-height: 160px;
			}

	script.
	
		
		$(document).ready(function () {
						
						var minCroppedWidth = 120;
									var minCroppedHeight = 160;

							var clear = true;

							var $modal = $('#modal');
							var fancybox;

							var image = document.getElementById('sample_image');

							var cropper;

							var input = $('#upload_image');

							input.on('click', function (event) {
									input.val(null);
							});

							input.on('change', function (event) {

									var files = event.target.files;

									var done = function (url) {
										image.src = url;
										//- $modal.modal('show');
										new Fancybox([{ 
												src: "#modal-image-upload", 
												type: "inline",
												arrows: false,
												// infobar: false,
												touch: false,
												trapFocus: false,
												placeFocusBack: false,
												infinite: false,
												dragToClose: false,
												type: 'inline',
												autoFocus: false,
												groupAll: false,
												groupAttr: false,
												// showClass: "fancybox-throwOutUp",
												// hideClass: "fancybox-throwOutDown",
												l10n: {
													Escape: "Закрыть",
													NEXT: "Вперед",
													PREV: "Назад",
												},
											}],
											{
													on:{
														done: (fancybox, slide) => {
															cropper = new Cropper(image, {
																// aspectRatio: 1,
																aspectRatio: minCroppedWidth / minCroppedHeight,
																viewMode: 2,
																preview: '.preview',
							
																data: {
																		width: minCroppedWidth * 2,
																		height: minCroppedHeight * 2,
																},
							
																crop: function (event) {
																		var width = event.detail.width;
																		var height = event.detail.height;
							
																		if (
																				width < minCroppedWidth
																				|| height < minCroppedHeight
																		) {
																				cropper.setData({
																						width: minCroppedWidth, //Math.max(minCroppedWidth,  width),
																						height: minCroppedHeight, //Math.max(minCroppedHeight, height),
																				});
																		}
																},
							
							
														});
														},
														closing: (fancybox, slide) => {
																cropper.destroy();
																	cropper = null;

																	if (clear) {
																			$('#upload_image').val(null);
																	}
														}
													}
											}
										);
											
									};

									if (files && files.length > 0) {
											let reader = new FileReader();
											reader.onload = function (event) {
													done(reader.result);
											};
											reader.readAsDataURL(files[0]);
									}
							});

							//- $modal.on('shown.bs.modal', function () {
							// 	fancybox.on("done", (fancybox, slide) => {
							// 		console.log('done')
									
							// })
							// .on('closing', function () {
							// 		cropper.destroy();
							// 		cropper = null;

							// 		if (clear) {
							// 				$('#upload_image').val(null);
							// 		}
							// });

							$('#crop').click(function () {
									let canvas = cropper.getCroppedCanvas({
											width: 300,
											height: 400
									});

									canvas.toBlob(function (blob) {
											let url = URL.createObjectURL(blob);
											var reader = new FileReader();
											reader.readAsDataURL(blob);
											reader.onloadend = function () {
													var base64data = reader.result;
													clear = false;
													Fancybox.close();
													$('#uploaded_image').removeClass("d-none").attr('src', base64data)
											};
									});
							});

					});
